@{
  Layout = "_Layout";
}

@model BestRestaurants.Models.Cuisine

<h2>Cuisine Details</h2>
<hr />


<h3>Cuisine Name: @Html.DisplayFor(model => model.CuisineName)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>There are no restaurants that serve this cuisine.</p>
}
else
{
  <h4>The following restaurants serve this cuisine:</h4>
  <ul>
  @foreach (var join in Model.JoinEntities)
  {
    <li>@join.Restaurant.Name</li>
  }
  </ul>
}
<p>@Html.ActionLink("Edit Cuisine", "Edit", new { id = Model.CuisineId })</p>
<p>@Html.ActionLink("Delete Cuisine", "Delete", new { id = Model.CuisineId })</p>
<p>@Html.ActionLink("Back to list", "Index")</p>